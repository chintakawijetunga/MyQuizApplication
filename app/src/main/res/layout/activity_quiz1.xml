<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chwtlk.myquizapplication.Quiz1">

    <RelativeLayout
        android:layout_width="384dp"
        android:layout_height="511dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_height="match_parent"
        tools:layout_width="match_parent">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|center_vertical"
            android:text="Question 01"
            tools:layout_editor_absoluteX="155dp"
            tools:layout_editor_absoluteY="30dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

    </RelativeLayout>


    <ImageView
        android:id="@+id/imgQuiz1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:soundEffectsEnabled="false"
        android:src="@drawable/chinawall"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="75dp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

    </RelativeLayout>

    <TextView
        android:id="@+id/txtQuiz1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:text="Which country is this landmark located in?"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="157dp" />

</android.support.constraint.ConstraintLayout>
