<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chwtlk.myquizapplication.Quiz1">

    <RelativeLayout
        android:layout_width="384dp"
        android:layout_height="511dp"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_height="match_parent"
        tools:layout_width="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/imgQuiz1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="47dp"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:soundEffectsEnabled="false"
                android:src="@drawable/chinawall"
                app:srcCompat="@mipmap/ic_launcher"
                tools:layout_editor_absoluteX="168dp"
                tools:layout_editor_absoluteY="75dp" />

            <TextView
                android:id="@+id/txtQuiz1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imgQuiz1"
                android:layout_below="@+id/imgQuiz1"
                android:layout_marginTop="27dp"
                android:layout_weight="1"
                android:text="Which country is this landmark located in?"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="339dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtQuiz1"
                android:layout_alignStart="@+id/txtQuiz1">

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/radioButton"
                    android:layout_below="@+id/radioButton4"
                    android:layout_marginTop="11dp"
                    android:text="France" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/radioButton4"
                    android:layout_below="@+id/radioButton"
                    android:layout_marginTop="15dp"
                    android:text="India" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="America"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="25dp" />

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="China"
                    android:layout_below="@+id/radioButton2"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="13dp" />
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|center_vertical"
            android:text="Question 01"
            tools:layout_editor_absoluteX="155dp"
            tools:layout_editor_absoluteY="30dp" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
